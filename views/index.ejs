    function onMapClick(e) {
        alert("You clicked the map at " + e.latlng);
    }
    
    map.on('click', onMapClick);

    var popup = L.popup();

    function onMapClick(e) {
        popup
            .setLatLng(e.latlng)
            .setContent("You clicked the map at " + e.latlng.toString())
            .openOn(map);
    }

    map.on('click', onMapClick);

    var disasterIcon = L.icon({
        iconUrl: 'disaster_icon.png',
        shadowUrl: 'disaster_shadow.png',
        iconSize: [30, 75],
        shadowSize: [25, 32],
        iconAnchor: [11, 41],
        shadowAnchor: [2, 31],
        popupAnchor: [-3, -76]
    });
    L.marker([28.25, 83.58], {icon: disasterIcon}).addTo(map);

    var epidemicIcon = L.icon({
        iconUrl: 'epidemic_icon.png',
        shadowUrl: 'epidemic_shadow.png',
        iconSize: [30, 75],
        shadowSize: [25, 32],
        iconAnchor: [11, 41],
        shadowAnchor: [2, 31],
        popupAnchor: [-3, -76]
    });
    L.marker([29.25, 82.58], {icon: epidemicIcon}).addTo(map);
